<%# Header %>
<header class="contact-header">

  <%# Header Ampersands %>
  <div class="contact-header__ampersands">
    <div class="rellax" data-rellax-speed="0">
      <div class="js-parallax-scene">
        <div class="layer" data-depth="0.75">
          <figure class="contact-header__ampersand">
            <%= image_tag("ampersand-hatch--light.svg", class: "contact-header__ampersand--hatch") %>
          </figure>
        </div>
        <div class="layer" data-depth="1.50">
          <figure class="contact-header__ampersand">
            <%= image_tag("ampersand-solid--light.svg", class: "contact-header__ampersand--solid") %>
          </figure>
        </div>
      </div>
    </div>
  </div>

  <%# Header Text %>
  <div class="process-header__text">
    <div class="row">
      <div class="rellax" data-rellax-speed="2">
        <div class="col-xs-24 col-sm-21 col-md-16 col-lg-15">
          <h1 class="contact-header__title">Have an interesting project, partnership or skillset? Talk to Robert, our managing director. Here's his email:</h1>
          <%= link_to "robert@dixonandmoe.com", "mailto:robert@dixonandmoe.com", class: "contact-header__link" %>
        </div>
      </div>
      <div class="rellax" data-rellax-speed="2">
        <div class="col-xs-24 col-sm-3 col-md-8 col-lg-9">
          <h4 class="contact-header__tagline">Contact us</h4>
        </div>
      </div>
    </div>
  </div>
</header>

<section class="contact-section">

  <div class="contact-map__outer">
    <div class="contact-map__inner js-contact-map"></div>
  </div>
  <script type="text/javascript">
    function initialize() {
      var mapCanvas = document.getElementsByClassName('js-contact-map')[0];
      var myLatLng = new google.maps.LatLng(37.773705, -122.416119);
      var mapStyles = [
          {
            "featureType": "landscape",
            "stylers": [
              { "visibility": "on" },
              { "color": "#f7f7f7" }
            ]
          },{
            "featureType": "road",
            "stylers": [
              { "visibility": "on" },
              { "color": "#ffffff" }
            ]
          },{
            "featureType": "road",
            "elementType": "labels.text.fill",
            "stylers": [
              { "visibility": "on" },
              { "color": "#333333" }
            ]
          },{
            "featureType": "poi",
            "stylers": [
              { "visibility": "off" }
            ]
          },{
            "featureType": "administrative.land_parcel",
            "elementType": "geometry.stroke",
            "stylers": [
              { "visibility": "off" }
            ]
          },{
            "featureType": "transit",
            "stylers": [
              { "visibility": "off" }
            ]
          }
        ]
      var mapOptions = {
        center: myLatLng,
        zoom: 17,
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        scrollwheel: false,
        styles: mapStyles
      };
      var map = new google.maps.Map(mapCanvas, mapOptions);
      // var mapIcon = "";
      var marker = new google.maps.Marker({
          position: myLatLng,
          map: map
          // icon: mapIcon
      });
    }
  </script>
</section>

