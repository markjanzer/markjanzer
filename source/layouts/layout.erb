<!doctype html>
<html>
  <head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb#">
    
    <%# Meta Tags %>
    <% if content_for?(:meta) %>
      <%= yield_content :meta %>
    <% end %>

    <%# CSS Assets %>
    <%= stylesheet_link_tag :application %>

    <%# Favicons %>
    <link rel="icon" sizes="16x16 32x32 48x48 64x64" href="favicon.ico">
    <!--[if IE]><link rel="shortcut icon" href="favicon.ico"><![endif]-->

    <%# Touch Icons %>
    <%= partial("partials/head/touch_icons") %>

    <%# Knowledge Graph %>
    <%= partial("partials/head/knowledge_graph") %>
  </head>

  <body class="<%= page_classes %>" itemscope itemtype="https://schema.org/<%= current_page.data.itemtype %>">

    <%# Body Navigation %>
    <header class="body-header js-body-header">
      <%= partial("partials/menu") %>
    </header>

    <%# Body Content %>
    <main class="body-content js-body-content">
      <%= yield %>
    </main>

    <%# Body Footer %>
    <footer class="body-footer js-body-footer">
      <%= partial("partials/footer") %>
    </footer>

    <%# JS Assets %>
    <%= javascript_include_tag :application %>

    <%# JS Custom %>
    <% if content_for?(:javascripts) %>
      <script><%= yield_content :javascripts %></script>
    <% end %>

    <%# Google Anlaytics %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-64800746-1', 'auto');
      ga('require', 'linkid', 'linkid.js');
      ga('send', 'pageview');
    </script>
  </body>
</html>