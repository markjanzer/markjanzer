  <%= partial("partials/head/meta_tags", locals: {
    local_path:        "/work/zahner/",
    local_type:        "website",
    local_card:        "summary_large_image",
    local_image:       "dixon-and-moe-zahner-hero.jpg",
    local_title:       "Zahner | Work — Dixon & Moe",
